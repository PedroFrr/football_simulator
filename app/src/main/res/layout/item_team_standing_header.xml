<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:paddingHorizontal="@dimen/activity_half_vertical_margin"
    android:paddingVertical="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_position_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_team_title"
        app:layout_constraintHorizontal_weight="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_team_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_goals_title"
        app:layout_constraintHorizontal_weight="0.45"
        app:layout_constraintStart_toEndOf="@id/tv_position_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goals_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="G"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_points_title"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintStart_toEndOf="@id/tv_team_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_points_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PTS"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintStart_toEndOf="@id/tv_goals_title"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>